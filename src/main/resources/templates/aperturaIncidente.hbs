           {{#partial "contenido" }}
                <!-- End of Topbar -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Incidentes</h1>
                    <p class="mb-4">Apertura de incidente</p>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Apertura </h6>
                        </div>
                        <div class="card-body">

                            <form action="/aperturaIncidente" method="POST">
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Entidad</label>
                                    <select class="form-control" id="entidad" name="entidad" required onchange="habilitarEstablecimiento()">
                                   <option value="">Seleccione una Entidad</option>

                                                {{#each entidades}}
                                                           <option value="{{this.id}}">{{this.nombre}}</option>
                                                    {{/each}}

                                    </select>
                                  </div>

                         <div class="form-group">
                                     <label for="exampleFormControlSelect1">Establecimiento</label>
                                     <select class="form-control" id="establecimiento" name="establecimiento"  disabled onchange="habilitarServicio()">
                                   <option value="">Primero seleccione una Entidad</option>

                                          {{#each entidades}}
                                                   {{#each this.establecimientos}}
                                                           <option value="{{this.id}}" data-entidad-id="{{this.entidad.id}}">{{this.nombre}}</option>
                                        {{/each}}
                                    {{/each}}
                                     </select>
                                   </div>

                       <div class="form-group">
                                    <label for="exampleFormControlSelect1">Servicio</label>
                                    <select class="form-control" id="servicio" name="servicio" disabled>
                                   <option value="">Primero seleccione un Establecimiento</option>

                           {{#each entidades}}
                                     {{#each this.establecimientos}}
                                        {{#each this.servicios}}
                                                 <option value="{{this.id}}" data-establecimiento-id="{{this.establecimiento.id}}">{{this.servicio.nombre}}</option>
                                            {{/each}}
                                       {{/each}}
                           {{/each}}

                                    </select>
                                  </div>

                                  <div class="form-group">
                                    <label for="exampleFormControlSelect1">Descripcion</label>
                                    <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion del incidente" required>

                                  </div>
                                <button type="submit" class="btn btn-primary mt-4 botonApertura"><i class="fa fa-plus mr-2"></i>Abrir</button>
                              </form>


                        </div>
                    </div>

                </div>
    <script src="/js/aperturaIncidente.js"></script>

{{/partial}}
{{> base }}

