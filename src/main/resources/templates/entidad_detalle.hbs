
{{#partial "contenido" }}
<h1 class="h3 mb-2 text-gray-800">{{entidad.nombre}}</h1>
<p class="mb-4">Tipo: {{entidad.tipo.nombre}}</p>
<p class="mb-4">Correo Electrónico: {{entidad.email}}</p>
<p class="mb-4">Descripción: {{entidad.descripcion}}</p>

        <!-- Lista de Establecimientos Asociados -->
<div class="card shadow mb-4">
<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Establecimientos Asociados</h6>
</div>
<div class="card-body tabla">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTableEstablecimientos" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Nombre del Establecimiento</th>
                <th>Dirección</th>
                <!-- Otros campos relevantes de los establecimientos -->
            </tr>
            </thead>
            <tbody>
            {{#each entidad.establecimientos}}
            <tr>
                <td><a href="/establecimiento/{{this.id}}">{{this.nombre}}</a></td>
                <td>{{this.direccion.direccionCompleta}}</td>
                <!-- Otros campos relevantes de los establecimientos -->
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
<!-- ...contenido existente... -->

<!-- Sección para Crear un Nuevo Establecimiento -->
{{#if editarEntidades}}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Crear Nuevo Establecimiento</h6>
    </div>
    <div class="card-body">
        <form action="/entidad/{{entidad.id}}/crearEstablecimiento" method="POST">
            <div class="form-group">
                <label for="establecimientoNombre">Nombre del Establecimiento:</label>
                <input type="text" class="form-control" id="eNombre" name="eNombre" required>
            </div>


            <div class="form-group">
                <label for="establecimientoDescripcion">Descripción:</label>
                <textarea class="form-control" id="eDescripcion" name="eDescripcion"></textarea>
            </div>

            <div class="form-group">
                <div class="card-body">


                            <!-- Dropdown para Provincia -->
                            <div class="form-group">
                                <label for="provincia">Provincia:</label>
                                <select class="form-control" id="provincia" name="provinciaId" required onchange="habilitarMunicipio()">
                                    <option value="">Seleccione una Provincia</option>
                                    {{#each provincias}}
                                    <option value="{{this.id}}">{{this.nombre}}</option>
                                    {{/each}}
                                </select>
                            </div>

                                    <!-- Dropdown para Municipio, inicialmente deshabilitado -->
                            <div class="form-group">
                            <label for="municipio">Municipio:</label>
                            <select class="form-control" id="municipio" name="municipioId" disabled onchange="habilitarLocalidad()">
                                <option value="">Primero seleccione una Provincia</option>
                                {{#each municipios}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                            </div>

                                    <!-- Dropdown para Localidad, inicialmente deshabilitado -->
                            <div class="form-group">
                            <label for="localidad">Localidad:</label>
                            <select class="form-control" id="localidad" name="localidadId" disabled>
                                <option value="">Primero seleccione un Municipio</option>
                                {{#each localidades}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                            </div>

                        <script>
                            function habilitarMunicipio() {
                                var provinciaSeleccionada = document.getElementById("provincia").value;
                                var municipioSelect = document.getElementById("municipio");
                                var botonSubmit = document.getElementById("botonSubmit");

                                if (provinciaSeleccionada) {
                                    municipioSelect.disabled = false;
                                    botonSubmit.disabled = false; // Habilitar el botón si se selecciona una provincia
                                } else {
                                    municipioSelect.disabled = true;
                                    document.getElementById("localidad").disabled = true; // También deshabilita localidad
                                    botonSubmit.disabled = true; // Deshabilitar el botón si no se selecciona una provincia
                                }
                            }

                            function habilitarLocalidad() {
                                var municipioSeleccionado = document.getElementById("municipio").value;
                                var localidadSelect = document.getElementById("localidad");

                                if (municipioSeleccionado) {
                                    localidadSelect.disabled = false;
                                } else {
                                    localidadSelect.disabled = true;
                                }
                            }
                        </script>




                </div>
            </div>
            <!-- Aquí puedes agregar más campos según sea necesario -->

            <button type="submit" class="btn btn-primary">Crear Establecimiento</button>
        </form>
    </div>
</div>
{{/if}}
<!-- ...contenido existente... -->

</div>
