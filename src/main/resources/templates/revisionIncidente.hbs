    {{#partial "contenido" }}
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Revision</h1>
                    <p class="mb-4">Sugerencia de revisión de incidente</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <h3 class="text-center mt-3">Revisión Manual de Incidente</h3>
                        <p class="ml-3">Hola <strong>{{username}}</strong>,</p>
                        <p class="ml-3">El sistema ha detectado que te encuentras cerca de un lugar con un incidente reportado.</p>
                        <p class="ml-3">Por favor, acércate al área afectada para revisar el incidente y cerrarlo si es necesario.</p>

                        <h4 class="text-center">Incidente</h4>
                        <h5 class="ml-3">Servicio afectado: </h5>
                            <p class="ml-3">{{incidente.servicioAfectado.servicio.nombre}} - {{incidente.servicioAfectado.establecimiento.nombre}} </p>
                        <h5 class="ml-3">Descripcion: </h5>
                              <p class="ml-3">{{incidente.descripcion}}</p>

                        <form action="/cerrarIncidente/{{incidente.id}}" method="POST">
                            <button type="submit" class="btn btn-primary mt-4 mr-4 ml-4 text-center botonApertura">Cerrar Incidente</button>
                        </form>
                    <p class="ml-3 mt-3"> ¡Gracias por tu colaboración!</p>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
{{/partial}}
