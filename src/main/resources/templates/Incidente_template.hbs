
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Incidentes</h1>
    <p class="mb-4">Listado de incidentes</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Incidentes</h6>
        </div>
        <div class="card-body tabla">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descripcion</th>
                        <th>Miembro informante</th>
                        <th>Servicio afectado</th>
                        <th>Comunidades afectadas</th>
                        <th>Estado</th>
                        <th>Fecha inicio</th>
                        <th>Fecha cierre</th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each incidentes}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.descripcion}}</td>
                        <td>{{this.miembroInformante.nombre}} {{this.miembroInformante.apellido}}</td>
                        <td>{{this.servicioAfectado.servicio.nombre}} - {{this.servicioAfectado.establecimiento.nombre}}</td>
                        <td> {{#each this.comunidadesAfectadas}}

                            <span class="badge badge-success" style="background-color:#5e5e5e;"> {{this.nombre}} </span>
                            {{/each}}
                        </td>
                        <td>
                            {{#if this.fechaCierre}} <span class="badge badge-success" style="background-color:#28a745;">Cerrado</span>{{else}}<span class="badge badge-success" style="background-color:#dc3545;">Abierto</span>{{/if}}

                        </td>
                        <td>{{this.fechaInicio}}</td>
                        <td>{{#if this.fechaCierre}}{{this.fechaCierre}}{{else}}-{{/if}}</td>
                    </tr>
                    {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
        <!-- /.container-fluid -->
