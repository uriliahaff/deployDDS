
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Usuarios</h1>
<p class="mb-4">Administraci√≥n de Usuarios  <i>(todos sus tipos)</i></p>

        <!-- DataTales Example -->
<div class="card shadow mb-4">
<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Usuarios</h6>
</div>
<div class="card-body tabla">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th></th>

            </tr>
            </thead>

            <tbody>
            {{#each usuarios}}
            <tr>
                <td><a href="perfil/{{this.id}}">{{this.username}}</a></td>
                <td>
                    {{#each this.roles}}
                    <span class="badge badge-primary">{{this.nombre}}</span>

                    {{/each}}
                </td>
                {{#if editarUsuario}}
                <td>
                    <a role="button" class="btn btn-warning" href="/usuarios/{{this.id}}/editar"><i class="fa fa-pen"></i></a>
                    <form action="/eliminarUsuario/{{this.id}}" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                    </form>
                </td>
                {{/if}}
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>

